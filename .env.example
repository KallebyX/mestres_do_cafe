# Configurações do Banco de Dados PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/mestres_cafe_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mestres_cafe_db
DB_USER=username
DB_PASSWORD=password

# Configurações do Flask
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here
API_PORT=5001

# Configurações de CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Configurações de JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Configurações de Email (para newsletter, notificações)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configurações de Upload de Arquivos
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Configurações de Pagamento (exemplo para Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Configurações de Cache (Redis)
REDIS_URL=redis://localhost:6379/0

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configurações de Celery (para tarefas assíncronas)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
