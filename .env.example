# Configurações do Banco de Dados PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/mestres_cafe_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mestres_cafe_db
DB_USER=username
DB_PASSWORD=password

# Configurações do Flask
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here
API_PORT=5001

# Configurações de CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Configurações de JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Configurações de Email (para newsletter, notificações)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configurações de Upload de Arquivos
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# ======================
# MERCADO PAGO - CHECKOUT TRANSPARENTE
# ======================

# Credenciais de teste - ETAPA 1 DE 6
# Obtenha suas credenciais em: https://www.mercadopago.com.br/developers/panel/app
MERCADO_PAGO_ACCESS_TOKEN=TEST-YOUR_ACCESS_TOKEN_HERE
MERCADO_PAGO_PUBLIC_KEY=TEST-YOUR_PUBLIC_KEY_HERE

# Credenciais de produção (configurar após testes)
# MERCADO_PAGO_ACCESS_TOKEN=your-production-access-token
# MERCADO_PAGO_PUBLIC_KEY=your-production-public-key

# Configurações do MercadoPago
MERCADO_PAGO_ENVIRONMENT=sandbox
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret-key
MERCADO_PAGO_NOTIFICATION_URL=https://yourapp.com/api/mercado-pago/webhook
FRONTEND_URL=http://localhost:3000

# Configurações do Marketplace
# Obtenha estes IDs em: https://www.mercadopago.com.br/developers/panel/app
MERCADO_PAGO_USER_ID=YOUR_USER_ID_HERE
MERCADO_PAGO_APPLICATION_ID=YOUR_APPLICATION_ID_HERE
MERCADO_PAGO_MARKETPLACE_FEE=5.0

# Configurações específicas para Checkout Transparente
MERCADO_PAGO_CHECKOUT_TYPE=transparent
MERCADO_PAGO_ENABLE_3DS=true
MERCADO_PAGO_ENABLE_TOKENIZATION=true

# Configurações de Pagamento (exemplo para Stripe - opcional)
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Configurações de Cache (Redis)
REDIS_URL=redis://localhost:6379/0

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configurações de Celery (para tarefas assíncronas)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
