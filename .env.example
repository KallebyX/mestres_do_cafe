# ========================================
# Mestres do Café - Variáveis de Ambiente
# ========================================
# Copie este arquivo para .env e configure com seus valores

# ========================================
# CONFIGURAÇÕES GERAIS
# ========================================

# Ambiente (development, staging, production)
FLASK_ENV=production
NODE_ENV=production

# Portas
API_PORT=5001
WEB_PORT=3000

# URLs da Aplicação (serão fornecidas pelo Render)
API_URL=https://mestres-cafe-api.onrender.com
FRONTEND_URL=https://mestres-cafe-web.onrender.com

# ========================================
# SEGURANÇA E AUTENTICAÇÃO
# ========================================

# Secret Keys (OBRIGATÓRIAS - gerar valores únicos e seguros)
SECRET_KEY=your-secret-key-here-min-32-chars-required
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars-required

# ========================================
# BANCO DE DADOS
# ========================================

# PostgreSQL (Render fornece automaticamente)
# DATABASE_URL será fornecida automaticamente pelo Render PostgreSQL

# Para desenvolvimento local:
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/mestres_cafe

# ========================================
# CACHE E SESSÕES
# ========================================

# Redis (Render fornece automaticamente)
# REDIS_URL será fornecida automaticamente pelo Render Redis

# Para desenvolvimento local:
# REDIS_URL=redis://localhost:6379

# ========================================
# APIS EXTERNAS - PAGAMENTOS
# ========================================

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-access-token
MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key
MERCADO_PAGO_CLIENT_ID=your-mercado-pago-client-id
MERCADO_PAGO_CLIENT_SECRET=your-mercado-pago-client-secret
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret

# Stripe (opcional)
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_WEBHOOK_SECRET=

# ========================================
# APIS EXTERNAS - FRETE E LOGÍSTICA
# ========================================

# Melhor Envio
MELHOR_ENVIO_API_KEY=your-melhor-envio-api-key
MELHOR_ENVIO_SANDBOX=false
MELHOR_ENVIO_REDIRECT_URI=https://mestres-cafe-api.onrender.com/api/melhor-envio/callback
MELHOR_ENVIO_WEBHOOK_URL=https://mestres-cafe-api.onrender.com/api/melhor-envio/webhook

# ========================================
# APIS EXTERNAS - STORAGE E ANALYTICS
# ========================================

# Supabase (opcional)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Cloudinary (para upload de imagens)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Google Analytics
GA_TRACKING_ID=

# ========================================
# EMAIL E COMUNICAÇÃO
# ========================================

# SMTP Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@mestresdocafe.com

# SendGrid (alternativa)
SENDGRID_API_KEY=

# Twilio (SMS - opcional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ========================================
# MONITORAMENTO E LOGS
# ========================================

# Sentry (monitoramento de erros)
SENTRY_DSN=

# LogRocket (opcional)
LOGROCKET_APP_ID=

# ========================================
# CORS E SEGURANÇA
# ========================================

# Origens permitidas (separadas por vírgula)
CORS_ORIGINS=https://mestres-cafe-web.onrender.com,https://mestresdocafe.com.br

# Rate Limiting
RATELIMIT_STORAGE_URL=${REDIS_URL}
RATELIMIT_DEFAULT=100 per hour

# ========================================
# CONFIGURAÇÕES DO RENDER
# ========================================

# Estas variáveis são definidas automaticamente pelo Render:
# RENDER=true
# RENDER_SERVICE_NAME
# RENDER_SERVICE_TYPE
# RENDER_GIT_COMMIT
# RENDER_GIT_BRANCH
# PORT

# ========================================
# CONFIGURAÇÕES ESPECÍFICAS DO FRONTEND
# ========================================

# Vite/React
VITE_API_URL=https://mestres-cafe-api.onrender.com
VITE_MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key
VITE_STRIPE_PUBLIC_KEY=
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=

# ========================================
# WORKERS E PERFORMANCE
# ========================================

# Gunicorn (para produção)
GUNICORN_WORKERS=2
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=2
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100

# ========================================
# DESENVOLVIMENTO LOCAL
# ========================================

# Flask Debug (apenas desenvolvimento)
FLASK_DEBUG=0

# Hot Reload (apenas desenvolvimento)
FLASK_RUN_RELOAD=false