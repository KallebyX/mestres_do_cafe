{
  "name": "@mestres-cafe/web",
  "version": "1.0.0",
  "description": "Frontend React para Mestres do CafÃ© Enterprise",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:production": "NODE_ENV=production vite build --mode production",
    "build:fast": "NODE_ENV=production vite build --mode production",
    "build:staging": "NODE_ENV=staging vite build --mode staging",
    "build:analyze": "NODE_ENV=production vite build --mode production && npx vite-bundle-analyzer dist/stats.html",
    "preview": "vite preview --host",
    "preview:production": "vite preview --host --mode production",
    "serve": "serve dist -s -l 3000",
    "serve:production": "serve dist -s -l 3000 --config serve.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:components": "vitest --run src/components",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 50",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "analyze": "npx vite-bundle-analyzer",
    "clean": "rm -rf dist",
    "clean:cache": "rm -rf node_modules/.vite",
    "clean:all": "rm -rf dist node_modules/.vite",
    "prebuild": "npm run clean",
    "prebuild:production": "npm run clean",
    "postbuild": "echo 'Build completed successfully!'",
    "postbuild:production": "echo 'Production build completed! Ready for deployment.'",
    "check": "npm run lint && npm run type-check && npm run test --run",
    "deploy:preview": "npm run build:production && npm run serve:production"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@tanstack/react-query": "^5.8.4",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.31",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.8.0",
    "serve": "^14.2.1",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.4",
    "playwright": "^1.54.1",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
