# Mestres do Café - Production Environment Variables

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV=production
VITE_NODE_ENV=production

# ==============================================
# API CONFIGURATION
# ==============================================
VITE_API_URL=https://mestres-cafe-api.onrender.com
VITE_API_BASE_URL=https://mestres-cafe-api.onrender.com
VITE_API_TIMEOUT=30000

# ==============================================
# APPLICATION INFO
# ==============================================
VITE_APP_NAME=Mestres do Café
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Torrefação artesanal de cafés especiais em Santa Maria - RS
VITE_APP_URL=https://mestres-cafe-web.onrender.com

# ==============================================
# FEATURES FLAGS
# ==============================================
VITE_FEATURE_BLOG=true
VITE_FEATURE_COURSES=true
VITE_FEATURE_FORUM=true
VITE_FEATURE_GAMIFICATION=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_PWA=true

# ==============================================
# ANALYTICS & MONITORING
# ==============================================
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn
VITE_HOTJAR_ID=your-hotjar-id

# ==============================================
# PAYMENT GATEWAYS
# ==============================================
VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
VITE_PAGSEGURO_ENV=production

# ==============================================
# SOCIAL AUTH
# ==============================================
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# ==============================================
# CDN & ASSETS
# ==============================================
VITE_CDN_URL=https://mestres-cafe-web.onrender.com
VITE_ASSETS_URL=https://mestres-cafe-web.onrender.com/assets

# ==============================================
# SECURITY
# ==============================================
VITE_ENABLE_HTTPS=true
VITE_CORS_ORIGINS=https://mestres-cafe-web.onrender.com,https://mestres-cafe-api.onrender.com

# ==============================================
# PERFORMANCE
# ==============================================
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STRATEGY=stale-while-revalidate
VITE_PRELOAD_ASSETS=true