# Mestres do Café Enterprise - Configurações Docker
# Copie este arquivo para .env para configurar o ambiente de desenvolvimento

# =============================================================================
# Configurações Gerais
# =============================================================================
NODE_ENV=development
FLASK_ENV=development

# =============================================================================
# Portas dos Serviços
# =============================================================================
# Frontend
WEB_PORT=3000

# Backend API
API_PORT=5001

# Database
DB_PORT=5432

# Redis
REDIS_PORT=6379

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# Configurações do Banco de Dados
# =============================================================================
DB_NAME=mestres_cafe
DB_USER=postgres
DB_PASSWORD=postgres

# =============================================================================
# Configurações de Segurança (ALTERE EM PRODUÇÃO!)
# =============================================================================
SECRET_KEY=dev-secret-key-muito-longo-para-desenvolvimento-altere-em-producao
JWT_SECRET_KEY=dev-jwt-secret-muito-longo-para-desenvolvimento-altere-em-producao

# =============================================================================
# Ferramentas de Desenvolvimento (Profile: tools)
# =============================================================================
# Adminer (Database Admin)
ADMINER_PORT=8080

# Redis Commander
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# Mailhog (Email Testing)
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# =============================================================================
# Monitoramento (Profile: monitoring)
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# =============================================================================
# Configurações de API Externa (Produção)
# =============================================================================
# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=
MERCADO_PAGO_PUBLIC_KEY=
MERCADO_PAGO_WEBHOOK_SECRET=

# Melhor Envio
MELHOR_ENVIO_API_KEY=
MELHOR_ENVIO_SANDBOX=true

# ViaCEP (normalmente não precisa de chave)
VIACEP_API_URL=https://viacep.com.br/ws

# =============================================================================
# Configurações de Email (Desenvolvimento com Mailhog)
# =============================================================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=false

# =============================================================================
# URLs de Integração
# =============================================================================
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5001
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mestres_cafe
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Configurações de Performance
# =============================================================================
# Gunicorn Workers (Backend)
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# Redis Memory Limit
REDIS_MAXMEMORY=512mb

# =============================================================================
# Debug e Desenvolvimento
# =============================================================================
DEBUG=true
FLASK_DEBUG=1
LOG_LEVEL=DEBUG

# Reload automático (desenvolvimento)
CHOKIDAR_USEPOLLING=true

# =============================================================================
# Timezone
# =============================================================================
TZ=America/Sao_Paulo