{
  "name": "mestres-do-cafe-frontend",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Frontend da plataforma Mestres do Café - Torrefação Artesanal",
  "author": "Daniel do Nascimento <mestres@cafe.com.br>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "server:install": "cd server && npm install",
    "full-dev": "concurrently \"npm run server\" \"npm run dev\"",
    "setup": "npm install && npm run server:install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:backend": "cd server && npm test",
    "test:backend:watch": "cd server && npm run test:watch",
    "test:all": "npm run test:backend && npm run test:run",
    "test:watch": "vitest",
    "validate": "npm run lint && npm run test:run && npm run test:backend",
    "build:prod": "npm run build",
    "deploy:frontend": "npm run build:prod && npm run preview",
    "deploy:check": "npm run build && npm run preview",
    "clean": "rm -rf dist node_modules/.vite",
    "reset": "npm run clean && npm install",
    "render:build": "npm ci && npm run build",
    "render:start": "npm run preview",
    "heroku-postbuild": "npm run build",
    "start": "node unified-server.js",
    "unified": "npm run build && npm start",
    "ci:check": "chmod +x scripts/ci-check.sh && ./scripts/ci-check.sh",
    "ci:deploy-check": "chmod +x scripts/deploy-check.sh && ./scripts/deploy-check.sh",
    "ci:deploy-check:lighthouse": "chmod +x scripts/deploy-check.sh && ./scripts/deploy-check.sh --lighthouse",
    "test:ci": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css,md}\"",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/",
    "export:supabase": "node export-all.js",
    "export:data": "npm run export:supabase",
    "backup:full": "npm run export:supabase && echo 'Backup completo salvo em supabase-full-export.json'",
    "seed:supabase": "node scripts/seed-supabase.js",
    "seed:clear": "node scripts/seed-supabase.js --clear",
    "seed:force": "node scripts/seed-supabase.js --force",
    "db:reset": "npm run seed:clear && npm run seed:supabase",
    "db:status": "npm run export:supabase",
    "test:system": "node scripts/test-working-features.js",
    "test:complete": "node scripts/test-complete-system.js",
    "test:final": "node scripts/test-final-100-percent.js",
    "test:schema": "node scripts/update-database-schema.js",
    "blog:setup": "node scripts/setup-blog-database.js",
    "blog:test": "npm run blog:setup",
    "cart:test": "node scripts/test-cart-system.js"
  },
  "dependencies": {
    "@barchart/chart-lib": "^2.312.4",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toggle": "^1.1.9",
    "@supabase/supabase-js": "^2.50.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.21",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.453.0",
    "postcss": "^8.5.6",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "react-to-print": "^3.1.1",
    "recharts": "^3.0.2",
    "sonner": "^1.7.0",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.1",
    "whatsapp-web.js": "^1.30.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^7.6.0",
    "dotenv": "^16.6.1",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "happy-dom": "^18.0.1",
    "jest": "^30.0.1",
    "jsdom": "^26.1.0",
    "supertest": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0 <=20.x",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "react",
    "vite",
    "cafe",
    "torrefacao",
    "frontend",
    "javascript",
    "render",
    "production"
  ]
}
