# Mestres do Café - Variáveis de Ambiente para Render (Produção)

# ==============================================
# ENVIRONMENT
# ==============================================
FLASK_ENV=production
NODE_ENV=production

# ==============================================
# API CONFIGURATION
# ==============================================
SECRET_KEY=your-production-secret-key-here-change-this
JWT_SECRET_KEY=your-production-jwt-secret-here-change-this
PORT=10000
API_PORT=10000

# ==============================================
# DATABASE - SUPABASE
# ==============================================
# Configure these with your Supabase project values
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-production-supabase-anon-key
SUPABASE_SERVICE_KEY=your-production-supabase-service-key

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
VITE_API_URL=https://mestres-cafe-api.onrender.com
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-supabase-anon-key

# ==============================================
# STORAGE
# ==============================================
# Use Supabase Storage in production
SUPABASE_STORAGE_BUCKET=uploads

# ==============================================
# SECURITY
# ==============================================
CORS_ORIGINS=https://mestres-cafe-web.onrender.com
ALLOWED_HOSTS=mestres-cafe-api.onrender.com,mestres-cafe-web.onrender.com
