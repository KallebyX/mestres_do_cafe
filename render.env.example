# ===============================================================
# MESTRES DO CAFÃ‰ - RENDER.COM PRODUCTION ENVIRONMENT
# ===============================================================
# Copy these values to your Render service environment variables
# Replace placeholder values with your actual production values

# ===============================================================
# CORE ENVIRONMENT
# ===============================================================
NODE_ENV=production
FLASK_ENV=production

# ===============================================================
# API CONFIGURATION  
# ===============================================================
# IMPORTANT: Generate strong random keys for production
SECRET_KEY=REPLACE_WITH_STRONG_SECRET_KEY
JWT_SECRET_KEY=REPLACE_WITH_STRONG_JWT_SECRET_KEY

# Render automatically sets PORT, but we define backup
PORT=10000

# ===============================================================
# FRONTEND CONFIGURATION
# ===============================================================
# IMPORTANT: Update with your actual Render service URL
VITE_API_URL=https://mestres-cafe-api.onrender.com

# ===============================================================
# CORS & SECURITY
# ===============================================================
# IMPORTANT: Update with your actual Render web service URL  
CORS_ORIGINS=https://mestres-cafe-web.onrender.com

# Security headers (optional)
SECURE_HEADERS=true

# ===============================================================
# MERCADO PAGO CONFIGURATION (PRODUCTION)
# ===============================================================
# IMPORTANT: Replace with your PRODUCTION credentials
# DO NOT use test credentials in production!

# Production credentials (get from MercadoPago dashboard)
MERCADO_PAGO_ACCESS_TOKEN=YOUR_PRODUCTION_ACCESS_TOKEN_HERE
MERCADO_PAGO_PUBLIC_KEY=YOUR_PRODUCTION_PUBLIC_KEY_HERE

# Production settings
MERCADO_PAGO_ENVIRONMENT=production
MERCADO_PAGO_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_HERE
MERCADO_PAGO_NOTIFICATION_URL=https://mestres-cafe-api.onrender.com/api/mercado-pago/webhook

# Business settings
MERCADO_PAGO_MARKETPLACE_FEE=5.0
MERCADO_PAGO_ENABLE_3DS=true

