{
  "name": "mestres-do-cafe-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Frontend da plataforma Mestres do Café - Torrefação Artesanal",
  "author": "Daniel do Nascimento <mestres@cafe.com.br>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "server:install": "cd server && npm install",
    "full-dev": "concurrently \"npm run server\" \"npm run dev\"",
    "setup": "npm install && npm run server:install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:backend": "cd server && npm test",
    "test:backend:watch": "cd server && npm run test:watch",
    "test:all": "npm run test:backend && npm run test:run",
    "test:watch": "vitest",
    "validate": "npm run lint && npm run test:run && npm run test:backend",
    "build:prod": "npm run validate && npm run build",
    "deploy:frontend": "npm run build:prod && npm run preview",
    "deploy:check": "npm run build && npm run preview",
    "clean": "rm -rf dist node_modules/.vite",
    "reset": "npm run clean && npm install"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.453.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "sonner": "^1.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^7.6.0",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "happy-dom": "^18.0.1",
    "jest": "^30.0.1",
    "jsdom": "^26.1.0",
    "vite": "^6.0.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "react",
    "vite",
    "cafe",
    "torrefacao",
    "frontend",
    "javascript"
  ]
}
