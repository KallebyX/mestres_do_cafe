# Mestres do Café - Enterprise Environment Variables

# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV=development
FLASK_ENV=development

# ==============================================
# API CONFIGURATION
# ==============================================
API_PORT=5000
API_HOST=0.0.0.0
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# ==============================================
# DATABASE
# ==============================================
# Development (SQLite)
DATABASE_URL=sqlite:///mestres_cafe.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/mestres_cafe

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME=Mestres do Café
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema enterprise de e-commerce e ERP

# ==============================================
# REDIS (CACHE/SESSIONS)
# ==============================================
REDIS_URL=redis://localhost:6379/0

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ==============================================
# PAYMENT GATEWAYS
# ==============================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# PagSeguro
PAGSEGURO_EMAIL=your-pagseguro-email
PAGSEGURO_TOKEN=your-pagseguro-token

# ==============================================
# STORAGE
# ==============================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=mestres-cafe-uploads
AWS_REGION=us-east-1

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ==============================================
# SOCIAL AUTH
# ==============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
DEBUG=true
LOG_LEVEL=debug

# ==============================================
# SECURITY
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_PER_MINUTE=100

# ==============================================
# FEATURES FLAGS
# ==============================================
FEATURE_BLOG=true
FEATURE_COURSES=true
FEATURE_FORUM=true
FEATURE_GAMIFICATION=true
FEATURE_ANALYTICS=true

