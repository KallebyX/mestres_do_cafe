# Mestres do Caf√© - Production Environment Variables
# IMPORTANTE: Nunca commite este arquivo com valores reais!

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key-change-this
JWT_SECRET_KEY=your-jwt-secret-production-key-change-this

# Database Configuration
DATABASE_URL=postgresql://mestres_cafe_user:your-db-password@db:5432/mestres_cafe
POSTGRES_DB=mestres_cafe
POSTGRES_USER=mestres_cafe_user
POSTGRES_PASSWORD=your-db-password

# Redis Configuration
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_PASSWORD=your-redis-password

# Mercado Pago Configuration
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-access-token
MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret

# Melhor Envio Configuration
MELHOR_ENVIO_TOKEN=your-melhor-envio-token
MELHOR_ENVIO_SANDBOX=false

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Monitoring
GRAFANA_PASSWORD=your-grafana-password

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30